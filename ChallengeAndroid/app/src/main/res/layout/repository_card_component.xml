<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="repositoryCardDto"
            type="br.com.argmax.challengeandroid.app.components.repositorycard.dto.RepositoryCardDto" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repository_card_repository_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{repositoryCardDto.repositoryName}"
                android:textColor="@color/blueGray600"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nome Repositório" />

            <TextView
                android:id="@+id/repository_card_repository_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLength="75"
                android:text="@{repositoryCardDto.repositoryDescription}"
                android:textColor="@color/blueGray900"
                android:textSize="14sp"
                tools:text="Descrição do respositório Lorem Ipsum is simply dummy text of the printing and" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/repository_card_repository_forks_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/ic_fork"
                    android:drawablePadding="2dp"
                    android:text="@{repositoryCardDto.forkQuantity}"
                    android:textColor="@color/yellow700"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="640" />

                <TextView
                    android:id="@+id/repository_card_repository_stars_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="4dp"
                    android:text="@{repositoryCardDto.starsQuantity}"
                    android:textColor="@color/yellow700"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="100" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/repository_card_user_image_image_view"
                imageUri="@{repositoryCardDto.userImageUrl}"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/user_image"
                tools:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/repository_card_user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{repositoryCardDto.userName}"
                android:textColor="@color/blue600"
                tools:text="username" />

            <TextView
                android:id="@+id/repository_card_user_full_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@{repositoryCardDto.userFullName}"
                tools:text="Nome Sobrenome" />

        </LinearLayout>

    </LinearLayout>

</layout>